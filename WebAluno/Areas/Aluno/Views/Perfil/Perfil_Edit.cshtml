
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="~/Content/style_Perfil.css" rel="stylesheet">
    <link href="~/Content/style_menu.css" rel="stylesheet">
    <link href="~/Content/Panel.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">   
    <script type="text/javascript" src="~/Scripts/Menu.js"></script>
    <script type="text/javascript" src="~/Scripts/Perfil.js"></script>
    <title>Unisociesc - Perfil</title>
</head>
<body>
    <div class='content'>
        <div id="SlideMenuNav" class="sidenav">
            <div class="author-profile">
                <div class="background"><img src="https://image.ibb.co/fpw0ak/bg.jpg"></div>
                <div class="author-avatar"><img src="https://image.ibb.co/jfea85/avatar.png"></div>
                <span class="author-title">Teste Silva</span>
                <span class="author-RA">RA: 114001352</span>
                <span class="author-Curse">Curso: Bacharelado em S.I</span>
            </div>
            <span class="closebtn"><a href="javascript:void(0)" onclick="closeNav()" title="Fechar Menu">&times;</a></span>
            <ul id="menuOpacity" class="menu" onMouseOver="fixOpacity2()" onmouseout="fixOpacity()">
                <li><a href="/Aluno/Aluno/Aluno"><i class="fa fa-home" aria-hidden="true"></i>Início</a></li>
                <li><a href="/Aluno/Perfil/Perfil"><i class="fa fa-user" aria-hidden="true"></i>Perfil</a></li>
                <li><a href="/Aluno/RealizarProva/RealizarProvaFiltro"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Realizar prova</a></li>
                <li><a href="/Aluno/Duvidas/Duvidas"><i class="fa fa-question" aria-hidden="true"></i>Dúvidas</a></li>
                <li><a href="/Aluno/DesempenhoResultado/DesempenhoResultado"><i class="fa fa-bar-chart" aria-hidden="true"></i>Desempenho e Resultados</a></li>
            </ul>
        </div>
        <span class='showmenu' onclick="openNav()" title="Abrir Menu">&#9776;</span>
        <div class="panel" id="scroll">
            <div class="tab">
                <button class="tablinks" onclick="openOption(event, 'Gerais')">Informações Gerais</button>
                <button class="tablinks" onclick="openOption(event, 'Email')">E-mail</button>
                <button class="tablinks" onclick="openOption(event, 'Password')">Senha</button>
            </div>
            <div id="Gerais" class="tabcontent">
                <span><b>Matricula:</b> </span><input type="text" data-provide="typeahead" placeholder="123456789" style="margin-bottom: 10px;margin-left: 5px;">
                <span><b>Nome:</b></span><input type="text" data-provide="typeahead" placeholder="Teste da Silva" style="margin-bottom: 10px;margin-left: 5px;">
                <span><b>Cidade:</b></span><input type="text" data-provide="typeahead" placeholder="Joinville" style="margin-bottom: 10px;margin-left: 5px;">
                <span><b>Endereço:</b></span><input type="text" data-provide="typeahead" placeholder="Rua Teste, 123" style="margin-bottom: 10px;margin-left: 5px;">
                <span><b>CPF:</b></span><input type="text" data-provide="typeahead" placeholder="123456789" style="margin-bottom: 10px;margin-left: 5px;">
                <span><b>Telefone:</b></span><input type="text" data-provide="typeahead" placeholder="47123456789" style="margin-bottom: 10px;margin-left: 5px;">
                <center><a type="button" class="btn btn-info" href="/Aluno/Perfil/Perfil" style="margin-top: 15px;">Salvar</a></center>
            </div>

            <div id="Email" class="tabcontent">
                <span><b>E-mail:</b></span><input type="text" data-provide="typeahead" placeholder="teste@teste.com.br" style="margin-bottom: 10px;margin-left: 5px;">
                <center><a type="button" class="btn btn-info" href="/Aluno/Perfil/Perfil" style="margin-top: 15px;">Salvar</a></center>
            </div>

            <div id="Password" class="tabcontent">
                <span><b>Senha:</b></span><input type="text" data-provide="typeahead" placeholder="**********" style="margin-bottom: 10px;margin-left: 5px;">
                <center><a type="button" class="btn btn-info" href="/Aluno/Perfil/Perfil" style="margin-top: 15px;">Salvar</a></center>
            </div>
        </div>
    </div>
</body>
</html>

